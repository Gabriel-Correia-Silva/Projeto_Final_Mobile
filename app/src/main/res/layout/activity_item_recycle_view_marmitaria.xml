<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".utils.ItemRecyclerViewFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/itemImageViewFragment"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:src="@drawable/baseline_home_30" />

    <TextView
        android:id="@+id/itemtTextViewFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Marmitaria 22"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/itemImageViewFragment"
         />

    <TextView
        android:id="@+id/priceTextViewFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Valor medio:"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemImageViewFragment"
        app:layout_constraintStart_toEndOf="@+id/itemImageViewFragment" />

    <TextView
        android:id="@+id/itemtTextViewFragmentPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/itemImageViewFragment"
        app:layout_constraintStart_toEndOf="@+id/priceTextViewFragment" />

</androidx.constraintlayout.widget.ConstraintLayout>